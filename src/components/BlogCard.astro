---
import marketing from "../data/site-data.json";
import { Image } from "astro:assets";

const { blogCard } = marketing.site.components;
const { title, excerpt, date, tags, img, href } = Astro.props;
---

<article class="isolate relative bg-base-100 shadow-sm hover:shadow-soft border border-base-300 rounded-[3px] overflow-hidden transition hover:-translate-y-1">
  {img && (
    <a href={href} class="block">
      <Image
        src={import(`../images/${img}.jpg`)} 
        alt={title}
        class="w-full h-30 object-cover"
        loading="lazy"
      />
    </a>
  )}
  <div class="p-6">
    <div class="text-slate-500 text-xs uppercase tracking-widest">{date}</div>
    <h3 class="mt-3 font-semibold text-base-content text-lg">
      <a href={href} class="text-base-content">
        <span class="z-10 absolute inset-0"></span>
        {title}
      </a>
    </h3>
    <p class="mt-3 text-sm text-base-content/70">{excerpt}</p>
    {tags && (
      <div class="flex flex-wrap gap-2 mt-4">
        {tags.map((tag) => (
          <span class="bg-base-200 px-3 py-1 rounded-[3px] font-medium text-xs text-base-content/70">{tag}</span>
        ))}
      </div>
    )}
    <a href={href} class="inline-flex items-center gap-2 mt-5 font-semibold text-sky-700 text-sm">
      {blogCard.readMore} <span aria-hidden="true">â†’</span>
    </a>
  </div>
</article>
