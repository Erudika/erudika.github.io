---
import BaseLayout from "../layouts/BaseLayout.astro";
import marketing from "../data/site-data.json";
import { Image } from 'astro:assets';
import PersonCard from "../components/PersonCard.astro";
import optimizedBackground from "../images/img7.jpg";

const { about } = marketing.site.pages;
---

<BaseLayout
  title={marketing.site.meta.about.title}
  description={marketing.site.meta.about.description}
  canonical={marketing.site.meta.about.canonical}
>

  <div class="bg-cover bg-center" style={`background-image: url(${optimizedBackground.src});`}>
    <div class="py-24 section-shell">
      <div class="inline-flex flex-col gap-3 bg-base-100/85 shadow-soft backdrop-blur-sm p-6 rounded-[3px] ring-1 ring-base-300/60 max-w-3xl">
        <p class="font-semibold text-slate-500 text-xs uppercase tracking-[0.3em]">{about.eyebrow}</p>
        <h1 class="font-semibold text-base-content text-4xl">{about.title}</h1>
      </div>
    </div>
  </div>
  <section class="py-16">
    <div class="gap-10 grid lg:grid-cols-[1.1fr_0.9fr] section-shell">
      <div>
        <!-- <p class="font-semibold text-slate-500 text-xs uppercase tracking-[0.3em]">{about.eyebrow}</p>
        <h1 class="mt-3 font-semibold text-base-content text-4xl">{about.title}</h1> -->
        <p class="mt-4 text-base-content/70 text-lg">{about.body1}</p>
        <p class="mt-4 text-base-content/70">{about.body2}</p>
      </div>
      <div class="bg-base-100 shadow-soft p-8 border border-base-300 rounded-[3px]">
        <h2 class="font-semibold text-base-content text-xl">{about.detailsTitle}</h2>
        <dl class="space-y-3 mt-4 text-sm text-base-content/70">
          {about.details.map((detail) => (
            <div>
              <dt class="font-semibold text-base-content/80">{detail.label}</dt>
              <dd>{detail.value}</dd>
            </div>
          ))}
        </dl>
        <a href="mailto:alex@erudika.com?subject=Hey%2C%20I%20visited%20your%20site...&body=Hello%20Alex%21" class="text-sky-600 hover:text-sky-800 text-xs">☝️{about.emailMe}</a>
      </div>
    </div>
  </section>

  <section class="bg-base-100 py-16 border-base-300 border-t">
    <div class="section-shell">
      <p class="font-semibold text-slate-500 text-xs uppercase tracking-[0.3em]">{about.impact.eyebrow}</p>
      <div class="gap-6 grid sm:grid-cols-2 lg:grid-cols-4 mt-8">
        {about.impact.items.map((item) => (
          <div class="bg-base-200 shadow-sm p-6 border border-base-300 rounded-2xl">
            <div class="text-slate-500 text-xs uppercase tracking-widest">{item.label}</div>
            <div class="mt-3 font-semibold text-base-content text-2xl">{item.value}</div>
            <p class="mt-2 text-sm text-base-content/70">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="py-16 border-base-300 border-t">
    <div class="text-center section-shell">
      <p class="font-semibold text-slate-500 text-xs uppercase tracking-[0.3em]">{about.keyPeople.eyebrow}</p>
      <div class="flex flex-wrap justify-center gap-4 mt-6">
        {about.keyPeople.people.map((person) => <PersonCard person={person}/>)}
      </div>
    </div>
  </section>
</BaseLayout>
