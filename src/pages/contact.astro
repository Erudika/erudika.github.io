---
import BaseLayout from "../layouts/BaseLayout.astro";
import marketing from "../data/site-data.json";
import optimizedBackground from "../images/img1.jpg";

const { contact } = marketing.site.pages;
const addressLines = contact.address.split(", ");
const businessHours = "Mon - Fri: 9:00 - 18:00 (EET)";
---

<BaseLayout
  title={marketing.site.meta.contact.title}
  description={marketing.site.meta.contact.description}
  canonical={marketing.site.meta.contact.canonical}
>
  <div class="bg-cover bg-center" style={`background-image: url(${optimizedBackground.src});`}>
    <div class="py-24 section-shell">
      <div class="inline-flex flex-col gap-3 bg-base-100/85 shadow-soft backdrop-blur-sm p-6 rounded-[3px] ring-1 ring-base-300/60 max-w-3xl">
        <p class="font-semibold text-slate-500 text-xs uppercase tracking-[0.3em]">{contact.eyebrow}</p>
        <h1 class="font-semibold text-base-content text-4xl">{contact.title}</h1>
      </div>
    </div>
  </div>
  <section class="py-16">
    <div class="gap-10 grid lg:grid-cols-[1.1fr_0.9fr] section-shell">
      <div>
        <p class="mt-4 text-base-content/70 text-lg">{contact.body}</p>
        <div class="bg-base-100 mt-8 p-8 border border-base-300 rounded-[3px]">
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="flex justify-center items-center bg-base-200 rounded-full w-12 h-12 text-sky-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <rect x="3" y="5" width="18" height="14" rx="2"></rect>
                  <path d="M3 7l9 6 9-6"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-sm">{contact.labels.email}</div>
                <a class="text-sky-600 hover:text-sky-800 text-sm" href={`mailto:${contact.email}`}>{contact.email}</a>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="flex justify-center items-center bg-base-200 rounded-full w-12 h-12 text-sky-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M12 22s7-5.3 7-11a7 7 0 1 0-14 0c0 5.7 7 11 7 11z"></path>
                  <circle cx="12" cy="11" r="2.5"></circle>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-sm">{contact.labels.address}</div>
                <div class="text-sm">{addressLines[0]}</div>
                <div class="text-sm">{addressLines[1]}</div>
                <div class="text-sm">{addressLines[2]}</div>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="flex justify-center items-center bg-base-200 rounded-full w-12 h-12 text-sky-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <circle cx="12" cy="12" r="9"></circle>
                  <path d="M12 7v5l3 3"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold text-sm">Business Hours</div>
                <div class="text-sm">{businessHours}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="bg-base-100 shadow-soft p-8 border border-base-300 rounded-[3px]">
        <h2 class="font-semibold text-base-content text-xl">{contact.formTitle}</h2>
        <p class="mt-2 text-sm text-base-content/70">{contact.formBody}</p>
        <form class="space-y-4 mt-6">
          <input class="w-full input input-bordered" placeholder={contact.formFields.name} type="text" name="name" />
          <input class="w-full input input-bordered" placeholder={contact.formFields.email} type="email" name="email" />
          <textarea class="w-full textarea textarea-bordered" placeholder={contact.formFields.message} rows="4" name="message"></textarea>
          <button class="btn btn-primary" type="button">{contact.formFields.submit}</button>
        </form>
        <p class="mt-3 text-xs text-base-content/60">{contact.formNote} <a href="#" class="text-sky-600 hover:text-sky-800 text-xs">{contact.formNote2}</a></p>
      </div>
    </div>
  </section>
</BaseLayout>
