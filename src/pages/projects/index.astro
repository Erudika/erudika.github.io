---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectCard from "../../components/ProjectCard.astro";
import marketing from "../../data/site-data.json";
import optimizedBackground from "../../images/img9.jpg";

const { projectsIndex } = marketing.site.pages;
const projects = projectsIndex.items;
---

<BaseLayout
  title={marketing.site.meta.projectsIndex.title}
  description={marketing.site.meta.projectsIndex.description}
  canonical={marketing.site.meta.projectsIndex.canonical}
>
  <div class="bg-cover bg-center" style={`background-image: url(${optimizedBackground.src});`}>
    <div class="py-24 section-shell">
      <div class="inline-flex flex-col gap-3 bg-base-100/85 shadow-soft backdrop-blur-sm p-6 rounded-[3px] ring-1 ring-base-300/60 max-w-3xl">
        <p class="font-semibold text-slate-500 text-xs uppercase tracking-[0.3em]">{projectsIndex.eyebrow}</p>
        <h1 class="font-semibold text-base-content text-4xl">{projectsIndex.title}</h1>
      </div>
    </div>
  </div>
  <section class="py-16">
    <div class="section-shell">
      <!-- <p class="font-semibold text-slate-500 text-xs uppercase tracking-[0.3em]">{projectsIndex.eyebrow}</p>
      <h1 class="mt-3 font-semibold text-base-content text-4xl">{projectsIndex.title}</h1> -->
      <p class="mt-4 max-w-2xl text-base-content/70 text-lg">{projectsIndex.body}</p>
      <div class="gap-6 grid md:grid-cols-2 xl:grid-cols-3 mt-10">
        {projects.map((project) => (
          <ProjectCard {...project} />
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
