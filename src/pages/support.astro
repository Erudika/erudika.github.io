---
import BaseLayout from "../layouts/BaseLayout.astro";
import marketing from "../data/site-data.json";

const { support } = marketing.site.pages;
const plans = support.plans;
---

<BaseLayout
  title={marketing.site.meta.support.title}
  description={marketing.site.meta.support.description}
  canonical={marketing.site.meta.support.canonical}
>
  <div class="bg-[url('/src/images/img5.jpg')] bg-cover bg-center">
    <div class="section-shell py-24">
      <div class="inline-flex max-w-3xl flex-col gap-3 rounded-[3px] bg-base-100/85 p-6 shadow-soft ring-1 ring-base-300/60 backdrop-blur-sm">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{support.eyebrow}</p>
        <h1 class="text-4xl font-semibold text-base-content">{support.title}</h1>
      </div>
    </div>
  </div>
  <section class="py-16">
    <div class="section-shell">
      <!-- <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{support.eyebrow}</p>
      <h1 class="mt-3 text-4xl font-semibold text-base-content">{support.title}</h1> -->
      <p class="mt-4 text-lg text-base-content/70">{support.body}</p>
      <div class="mt-10 grid gap-6 md:grid-cols-2">
        {plans.map((plan) => (
          <div class="rounded-[3px] border border-base-300 bg-base-100 p-6 shadow-sm">
            <div class="text-xs font-semibold uppercase tracking-widest text-slate-500">{plan.name}</div>
            <div class="mt-2 text-2xl font-semibold text-base-content">{plan.price}</div>
            <p class="mt-3 text-sm text-base-content/70">{plan.summary}</p>
            <ul class="mt-4 space-y-2 text-sm text-base-content/70  min-h-[120px]">
              {plan.features.map((feature) => (
                <li>â€¢ {feature}</li>
              ))}
            </ul>
            <div class="content-end">
              <a href={plan.link} class="btn btn-primary mt-6 w-full text-white">{plan.cta}</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
