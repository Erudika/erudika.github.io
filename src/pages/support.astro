---
import BaseLayout from "../layouts/BaseLayout.astro";
import marketing from "../data/site-data.json";
import optimizedBackground from "../images/img5.jpg";

const { support } = marketing.site.pages;
const plans = support.plans;
---

<BaseLayout
  title={marketing.site.meta.support.title}
  description={marketing.site.meta.support.description}
  canonical={marketing.site.meta.support.canonical}
>
  <div class="bg-cover bg-center" style={`background-image: url(${optimizedBackground.src});`}>
    <div class="py-24 section-shell">
      <div class="inline-flex flex-col gap-3 bg-base-100/85 shadow-soft backdrop-blur-sm p-6 rounded-[3px] ring-1 ring-base-300/60 max-w-3xl">
        <p class="font-semibold text-slate-500 text-xs uppercase tracking-[0.3em]">{support.eyebrow}</p>
        <h1 class="font-semibold text-base-content text-4xl">{support.title}</h1>
      </div>
    </div>
  </div>
  <section class="py-16">
    <div class="section-shell">
      <!-- <p class="font-semibold text-slate-500 text-xs uppercase tracking-[0.3em]">{support.eyebrow}</p>
      <h1 class="mt-3 font-semibold text-base-content text-4xl">{support.title}</h1> -->
      <p class="mt-4 text-base-content/70 text-lg">{support.body}</p>
      <div class="gap-6 grid md:grid-cols-2 mt-10">
        {plans.map((plan) => (
          <div class="bg-base-100 shadow-sm p-6 border border-base-300 rounded-[3px]">
            <div class="font-semibold text-slate-500 text-xs uppercase tracking-widest">{plan.name}</div>
            <div class="mt-2 font-semibold text-base-content text-2xl">{plan.price}</div>
            <p class="mt-3 text-sm text-base-content/70">{plan.summary}</p>
            <ul class="space-y-2 mt-4 min-h-[120px] text-sm text-base-content/70">
              {plan.features.map((feature) => (
                <li>â€¢ {feature}</li>
              ))}
            </ul>
            <div class="content-end">
              <a href={plan.link} class="mt-6 w-full text-white btn btn-primary">{plan.cta}</a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
