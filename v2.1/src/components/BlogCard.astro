---
import marketing from "../data/site-data.json";

const { blogCard } = marketing.site.components;
const { title, excerpt, date, tags, href } = Astro.props;
---

<article class="rounded-[3px] border border-base-300 bg-base-100 p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-soft">
  <div class="text-xs uppercase tracking-widest text-slate-500">{date}</div>
  <h3 class="mt-3 text-lg font-semibold text-base-content">{title}</h3>
  <p class="mt-3 text-sm text-base-content/70">{excerpt}</p>
  {tags && (
    <div class="mt-4 flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="rounded-[3px] bg-base-200 px-3 py-1 text-xs font-medium text-base-content/70">{tag}</span>
      ))}
    </div>
  )}
  <a href={href} class="mt-5 inline-flex items-center gap-2 text-sm font-semibold text-sky-700">
    {blogCard.readMore} <span aria-hidden="true">â†’</span>
  </a>
</article>
