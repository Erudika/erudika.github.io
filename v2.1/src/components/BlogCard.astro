---
const { title, excerpt, date, tags, href } = Astro.props;
---

<article class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-soft">
  <div class="text-xs uppercase tracking-widest text-slate-500">{date}</div>
  <h3 class="mt-3 text-lg font-semibold text-slate-900">{title}</h3>
  <p class="mt-3 text-sm text-slate-600">{excerpt}</p>
  {tags && (
    <div class="mt-4 flex flex-wrap gap-2">
      {tags.map((tag) => (
        <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-600">{tag}</span>
      ))}
    </div>
  )}
  <a href={href} class="mt-5 inline-flex items-center gap-2 text-sm font-semibold text-indigo-700">
    Read more <span aria-hidden="true">â†’</span>
  </a>
</article>
