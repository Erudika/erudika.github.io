---
const navLinks = [
  { label: "About", href: "/about" },
  { label: "Projects", href: "/projects" },
  { label: "Blog", href: "/blog" },
  { label: "Support", href: "/support" },
  { label: "Contact", href: "/contact" }
];
---

<header class="sticky top-0 z-30 border-b border-slate-200 bg-white/90 backdrop-blur">
  <div class="section-shell flex h-16 items-center justify-between gap-6">
    <a href="/" class="flex items-center gap-3 text-slate-900">
      <img src="/old-website-assets/img/erudika.svg" alt="Erudika" class="h-8 w-8" loading="eager" />
      <span class="font-heading text-lg font-semibold tracking-tight">Erudika</span>
    </a>

    <nav class="hidden items-center gap-6 md:flex">
      {navLinks.map((link) => (
        <a href={link.href} class="text-sm font-medium text-slate-600 transition hover:text-indigo-700">
          {link.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-3">
      <a href="https://status.erudika.com" class="hidden text-xs font-semibold text-slate-500 hover:text-indigo-700 sm:block">
        Status
      </a>
      <a href="mailto:contact@erudika.com" class="btn btn-primary btn-sm text-white">Contact</a>
      <div class="dropdown dropdown-end md:hidden">
        <label tabindex="0" class="btn btn-ghost btn-sm">
          Menu
        </label>
        <ul tabindex="0" class="menu dropdown-content mt-3 w-52 rounded-box bg-white p-2 shadow">
          {navLinks.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</header>
