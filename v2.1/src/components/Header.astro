---
import marketing from "../data/site-data.json";
import { Image } from 'astro:assets';
import erudikaDark from "../images/erudika-dark.svg"
import erudikaLight from "../images/erudika-light.svg"

const { header } = marketing.site;
const navLinks = header.nav;
---

<header class="sticky top-0 z-30 border-b border-base-300 bg-base-100/90 backdrop-blur">
  <div class="section-shell flex h-20 items-center justify-between gap-6">
    <a href="/" class="flex items-center text-base-content">
      <span class="logo-frame h-[50px] w-[140px] py-2">
        <Image src={erudikaLight} alt={header.logoAlt} class="logo-light" loading="eager" />
        <Image src={erudikaDark} alt={header.logoAlt} class="logo-dark" loading="eager" />
      </span>
    </a>

    <nav class="hidden items-center gap-6 md:flex">
      {navLinks.map((link) => (
        <a href={link.href} class="text-base font-medium text-base-content/70 transition hover:text-sky-700">
          {link.label}
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-3">
      <a href="mailto:contact@erudika.com" class="btn btn-primary btn-sm text-white">{header.ctaLabel}</a>
      <div class="dropdown dropdown-end md:hidden">
        <label tabindex="0" class="btn btn-ghost btn-sm">
          {header.menuLabel}
        </label>
        <ul tabindex="0" class="menu dropdown-content mt-3 w-52 rounded-box bg-base-100 p-2 shadow">
          {navLinks.map((link) => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</header>
