---
import marketing from "../data/site-data.json";
import { Image } from 'astro:assets';

const { projectCard } = marketing.site.components;
const { name, tagline, category, cta, logo, signal } = Astro.props;
---

<a href={cta?.href} class="block rounded-[3px] border border-base-300 bg-base-100 p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-soft">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-3">
      {logo && <Image src={import(logo)} alt={name} class="h-9 w-auto" />}
      <div>
        <p class="text-xs font-semibold uppercase tracking-widest text-slate-500">{category}</p>
        <h3 class="text-lg font-semibold text-base-content">{name}</h3>
      </div>
    </div>
    {signal && <span class="rounded-[3px] bg-amber-100 px-3 py-1 text-xs font-semibold text-amber-900">{signal}</span>}
  </div>
  <p class="mt-4 text-sm text-base-content/70">{tagline}</p>
  <div class="mt-6 inline-flex items-center gap-2 text-sm font-semibold text-sky-700">
    {cta?.label ?? projectCard.fallbackCta}
    <span aria-hidden="true">â†’</span>
  </div>
</a>
