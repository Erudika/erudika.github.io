---
const { name, subtitle, description, features, audience, docs, repo, ctaLabel, ctaHref, logo } = Astro.props;
---

<section class="py-16">
  <div class="section-shell grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
    <div>
      <div class="flex items-center gap-3">
        {logo && <img src={logo} alt={name} class="h-10 w-10" loading="lazy" />}
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Project</p>
      </div>
      <h1 class="mt-4 text-4xl font-semibold text-slate-900">{name}</h1>
      <p class="mt-3 text-lg text-slate-600">{subtitle}</p>
      <p class="mt-4 text-slate-600">{description}</p>
      <div class="mt-6 flex flex-wrap gap-4">
        <a href={ctaHref} class="btn btn-primary text-white">{ctaLabel}</a>
        {docs && (
          <a href={docs} class="btn btn-ghost border border-slate-300">Documentation</a>
        )}
        {repo && (
          <a href={repo} class="btn btn-ghost border border-slate-300">GitHub</a>
        )}
      </div>
    </div>
    <div class="rounded-3xl border border-slate-200 bg-white p-8 shadow-soft">
      <h2 class="text-xl font-semibold text-slate-900">Key features</h2>
      <ul class="mt-4 space-y-3 text-sm text-slate-600">
        {features.map((feature) => (
          <li>â€¢ {feature}</li>
        ))}
      </ul>
      <h3 class="mt-6 text-sm font-semibold uppercase tracking-[0.3em] text-slate-500">Who it is for</h3>
      <p class="mt-3 text-sm text-slate-600">{audience}</p>
    </div>
  </div>
</section>
