---
import SEOHead from "../components/SEOHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const { title, description, canonical, image } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="erudika">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <SEOHead title={title} description={description} canonical={canonical} image={image} />
    <link rel="icon" type="image/svg+xml" href="/old-website-assets/img/erudika.svg" />
  </head>
  <body class="min-h-screen bg-brand-mist text-slate-900">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
