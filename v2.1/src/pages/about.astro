---
import BaseLayout from "../layouts/BaseLayout.astro";
import marketing from "../data/site-data.json";

const { about } = marketing.site.pages;
---

<BaseLayout
  title={marketing.site.meta.about.title}
  description={marketing.site.meta.about.description}
  canonical={marketing.site.meta.about.canonical}
>
  <section class="py-16">
    <div class="section-shell grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{about.eyebrow}</p>
        <h1 class="mt-3 text-4xl font-semibold text-base-content">{about.title}</h1>
        <p class="mt-4 text-lg text-base-content/70">{about.body1}</p>
        <p class="mt-4 text-base-content/70">{about.body2}</p>
      </div>
      <div class="rounded-[3px] border border-base-300 bg-base-100 p-8 shadow-soft">
        <h2 class="text-xl font-semibold text-base-content">{about.detailsTitle}</h2>
        <dl class="mt-4 space-y-3 text-sm text-base-content/70">
          {about.details.map((detail) => (
            <div>
              <dt class="font-semibold text-base-content/80">{detail.label}</dt>
              <dd>{detail.value}</dd>
            </div>
          ))}
        </dl>
      </div>
    </div>
  </section>
</BaseLayout>
