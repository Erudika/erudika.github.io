---
import BaseLayout from "../layouts/BaseLayout.astro";
import marketing from "../data/site-data.json";
import { Image } from 'astro:assets';
const { about } = marketing.site.pages;
---

<BaseLayout
  title={marketing.site.meta.about.title}
  description={marketing.site.meta.about.description}
  canonical={marketing.site.meta.about.canonical}
>

  <div class="bg-[url('/src/images/img7.jpg')] bg-cover bg-center">
    <div class="section-shell py-24">
      <div class="inline-flex max-w-3xl flex-col gap-3 rounded-[3px] bg-base-100/85 p-6 shadow-soft ring-1 ring-base-300/60 backdrop-blur-sm">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{about.eyebrow}</p>
        <h1 class="text-4xl font-semibold text-base-content">{about.title}</h1>
      </div>
    </div>
  </div>
  <section class="py-16">
    <div class="section-shell grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
      <div>
        <!-- <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{about.eyebrow}</p>
        <h1 class="mt-3 text-4xl font-semibold text-base-content">{about.title}</h1> -->
        <p class="mt-4 text-lg text-base-content/70">{about.body1}</p>
        <p class="mt-4 text-base-content/70">{about.body2}</p>
      </div>
      <div class="rounded-[3px] border border-base-300 bg-base-100 p-8 shadow-soft">
        <h2 class="text-xl font-semibold text-base-content">{about.detailsTitle}</h2>
        <dl class="mt-4 space-y-3 text-sm text-base-content/70">
          {about.details.map((detail) => (
            <div>
              <dt class="font-semibold text-base-content/80">{detail.label}</dt>
              <dd>{detail.value}</dd>
            </div>
          ))}
        </dl>
        <a href="mailto:alex@erudika.com?subject=Hey%2C%20I%20visited%20your%20site...&body=Hello%20Alex%21" class="text-xs text-sky-600 hover:text-sky-800">☝️{about.emailMe}</a>
      </div>
    </div>
  </section>

  <section class="border-t border-base-300 bg-base-100 py-16">
    <div class="section-shell">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{about.impact.eyebrow}</p>
      <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
        {about.impact.items.map((item) => (
          <div class="rounded-2xl border border-base-300 bg-base-200 p-6 shadow-sm">
            <div class="text-xs uppercase tracking-widest text-slate-500">{item.label}</div>
            <div class="mt-3 text-2xl font-semibold text-base-content">{item.value}</div>
            <p class="mt-2 text-sm text-base-content/70">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="border-t border-base-300 py-16">
    <div class="section-shell text-center">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{about.keyPeople.eyebrow}</p>
      <div class="mt-6 flex flex-wrap justify-center gap-4">
        {about.keyPeople.people.map((person) => (
          <div class="flex items-center gap-3 rounded-[20px] border border-base-300 bg-base-100 px-4 py-5">
            <div>
            <Image src={person.avatar} inferSize alt="Avatar" class="flex h-10 w-10 items-center justify-center rounded-full bg-indigo-600 text-sm font-semibold text-white"/>
            </div>
            <div class="text-sm font-semibold text-base-content">{person.name} <br> <span class="text-xs">{person.role}</span></div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
