---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import { getCollection } from "astro:content";
import marketing from "../../data/site-data.json";
import Prose from '../../components/Prose.astro';

const { breadcrumbs } = marketing.site.components;
const baseUrl = marketing.site.organization.url;

const toSlug = (tag) => tag.toLowerCase().replace(/\s+/g, "-");

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
const postUrl = `${baseUrl}/blog/${post.slug}`;

const articleJsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  headline: post.data.title,
  description: post.data.excerpt,
  datePublished: post.data.date.toISOString(),
  dateModified: post.data.date.toISOString(),
  author: {
    "@type": "Organization",
    name: marketing.site.organization.name
  },
  publisher: {
    "@type": "Organization",
    name: marketing.site.organization.name,
    logo: {
      "@type": "ImageObject",
      url: marketing.site.organization.logo
    }
  },
  mainEntityOfPage: postUrl,
  image: [post.data["og:image"] ?? marketing.site.organization.logo],
  url: postUrl
};

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: breadcrumbs.home, item: baseUrl },
    { "@type": "ListItem", position: 2, name: breadcrumbs.blog, item: `${baseUrl}/blog` },
    { "@type": "ListItem", position: 3, name: post.data.title, item: postUrl }
  ]
};
---

<BaseLayout
  title={`${post.data.title} | Erudika`}
  description={post.data.excerpt}
  canonical={post.data.canonical ?? postUrl}
  image={post.data["og:image"] ?? "/src/images/erudika.png"}
  jsonLd={[articleJsonLd, breadcrumbJsonLd]}
>
  <article class="py-16">
    <div class="max-w-3xl section-shell">
      <Breadcrumbs items={[
        { label: breadcrumbs.home, href: "/" },
        { label: breadcrumbs.blog, href: "/blog" },
        { label: post.data.title, href: `/blog/${post.slug}` }
      ]} />
      <h1 class="mt-6 font-semibold text-base-content text-4xl">{post.data.title}</h1>
      <div class="flex flex-wrap gap-3 mt-4 text-slate-500 text-sm">
        <span>
          {post.data.date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "2-digit"
          })}
        </span>
        <span>â€¢</span>
        <div class="flex flex-wrap gap-2">
          {post.data.tags.map((tag) => (
            <a href={`/blog/tags/${toSlug(tag)}`} class="bg-base-200 px-3 py-1 rounded-[3px] font-medium text-xs text-base-content/70">
              {tag}
            </a>
          ))}
        </div>
      </div>
      <Prose>
        <Content />
      </Prose>
    </div>
  </article>
</BaseLayout>
