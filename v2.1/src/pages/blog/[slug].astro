---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post }
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout
  title={`${post.data.title} | Erudika`}
  description={post.data.excerpt}
  canonical={post.data.canonical ?? `https://erudika.com/blog/${post.slug}`}
  image={post.data["og:image"] ?? "/old-website-assets/img/erudika.png"}
>
  <article class="py-16">
    <div class="section-shell max-w-3xl">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">Blog</p>
      <h1 class="mt-3 text-4xl font-semibold text-slate-900">{post.data.title}</h1>
      <div class="mt-4 flex flex-wrap gap-3 text-sm text-slate-500">
        <span>
          {post.data.date.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "2-digit"
          })}
        </span>
        <span>â€¢</span>
        <div class="flex flex-wrap gap-2">
          {post.data.tags.map((tag) => (
            <a href={`/blog/tags/${tag.toLowerCase()}`} class="rounded-full bg-slate-100 px-3 py-1 text-xs font-medium text-slate-600">
              {tag}
            </a>
          ))}
        </div>
      </div>
      <div class="prose prose-slate mt-8 max-w-none">
        <Content />
      </div>
    </div>
  </article>
</BaseLayout>
