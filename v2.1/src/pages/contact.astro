---
import BaseLayout from "../layouts/BaseLayout.astro";
import marketing from "../data/site-data.json";

const { contact } = marketing.site.pages;
const addressLines = contact.address.split(", ");
const businessHours = "Mon - Fri: 9:00 - 18:00 (EET)";
---

<BaseLayout
  title={marketing.site.meta.contact.title}
  description={marketing.site.meta.contact.description}
  canonical={marketing.site.meta.contact.canonical}
>
  <div class="bg-[url('/src/images/img9.jpg')] bg-cover bg-center">
    <div class="section-shell py-24">
      <div class="inline-flex max-w-3xl flex-col gap-3 rounded-[3px] bg-base-100/85 p-6 shadow-soft ring-1 ring-base-300/60 backdrop-blur-sm">
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{contact.eyebrow}</p>
        <h1 class="text-4xl font-semibold text-base-content">{contact.title}</h1>
      </div>
    </div>
  </div>
  <section class="py-16">
    <div class="section-shell grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
      <div>
        <p class="mt-4 text-lg text-base-content/70">{contact.body}</p>
        <div class="mt-8 rounded-[3px] border border-base-300 bg-base-100 p-8">
          <div class="space-y-6">
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-base-200 text-sky-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <rect x="3" y="5" width="18" height="14" rx="2"></rect>
                  <path d="M3 7l9 6 9-6"></path>
                </svg>
              </div>
              <div>
                <div class="text-sm font-semibold">{contact.labels.email}</div>
                <a class="text-sm text-sky-600 hover:text-sky-800" href={`mailto:${contact.email}`}>{contact.email}</a>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-base-200 text-sky-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <path d="M12 22s7-5.3 7-11a7 7 0 1 0-14 0c0 5.7 7 11 7 11z"></path>
                  <circle cx="12" cy="11" r="2.5"></circle>
                </svg>
              </div>
              <div>
                <div class="text-sm font-semibold">{contact.labels.address}</div>
                <div class="text-sm">{addressLines[0]}</div>
                <div class="text-sm">{addressLines[1]}</div>
                <div class="text-sm">{addressLines[2]}</div>
              </div>
            </div>
            <div class="flex items-start gap-4">
              <div class="flex h-12 w-12 items-center justify-center rounded-full bg-base-200 text-sky-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
                  <circle cx="12" cy="12" r="9"></circle>
                  <path d="M12 7v5l3 3"></path>
                </svg>
              </div>
              <div>
                <div class="text-sm font-semibold">Business Hours</div>
                <div class="text-sm">{businessHours}</div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="rounded-[3px] border border-base-300 bg-base-100 p-8 shadow-soft">
        <h2 class="text-xl font-semibold text-base-content">{contact.formTitle}</h2>
        <p class="mt-2 text-sm text-base-content/70">{contact.formBody}</p>
        <form class="mt-6 space-y-4">
          <input class="input input-bordered w-full" placeholder={contact.formFields.name} type="text" name="name" />
          <input class="input input-bordered w-full" placeholder={contact.formFields.email} type="email" name="email" />
          <textarea class="textarea textarea-bordered w-full" placeholder={contact.formFields.message} rows="4" name="message"></textarea>
          <button class="btn btn-primary" type="button">{contact.formFields.submit}</button>
        </form>
        <p class="mt-3 text-xs text-base-content/60">{contact.formNote} <a href="#" class="text-xs text-sky-600 hover:text-sky-800">{contact.formNote2}</a></p>
      </div>
    </div>
  </section>
</BaseLayout>
