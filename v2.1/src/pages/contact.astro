---
import BaseLayout from "../layouts/BaseLayout.astro";
import marketing from "../data/site-data.json";

const { contact } = marketing.site.pages;
---

<BaseLayout
  title={marketing.site.meta.contact.title}
  description={marketing.site.meta.contact.description}
  canonical={marketing.site.meta.contact.canonical}
>
  <section class="py-16">
    <div class="section-shell grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{contact.eyebrow}</p>
        <h1 class="mt-3 text-4xl font-semibold text-base-content">{contact.title}</h1>
        <p class="mt-4 text-lg text-base-content/70">{contact.body}</p>
        <div class="mt-6 space-y-3 text-sm text-base-content/80">
          <div>{contact.labels.email}: <a class="text-sky-700" href={`mailto:${contact.email}`}>{contact.email}</a></div>
          <div>{contact.labels.phone}: {contact.phone}</div>
          <div>{contact.labels.address}: {contact.address}</div>
        </div>
      </div>
      <div class="rounded-[3px] border border-base-300 bg-base-100 p-8 shadow-soft">
        <h2 class="text-xl font-semibold text-base-content">{contact.formTitle}</h2>
        <p class="mt-2 text-sm text-base-content/70">{contact.formBody}</p>
        <form class="mt-6 space-y-4">
          <input class="input input-bordered w-full" placeholder={contact.formFields.name} type="text" name="name" />
          <input class="input input-bordered w-full" placeholder={contact.formFields.email} type="email" name="email" />
          <textarea class="textarea textarea-bordered w-full" placeholder={contact.formFields.message} rows="4" name="message"></textarea>
          <button class="btn btn-primary text-white" type="button">{contact.formFields.submit}</button>
        </form>
        <p class="mt-3 text-xs text-base-content/60">{contact.formNote}</p>
      </div>
    </div>
  </section>
</BaseLayout>
