---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectPage from "../../components/ProjectPage.astro";
import marketing from "../../data/site-data.json";

const paraCloud = marketing.site.pages.projectsIndex.items[2];
const baseUrl = marketing.site.organization.url;

const productJsonLd = {
  "@context": "https://schema.org",
  "@type": "Product",
  name: paraCloud.name,
  description: paraCloud.tagline,
  brand: {
    "@type": "Organization",
    name: marketing.site.organization.name
  },
  url: "https://erudika.com/projects/para-cloud"
};

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: marketing.site.components.breadcrumbs.home, item: baseUrl },
    { "@type": "ListItem", position: 2, name: marketing.site.components.breadcrumbs.projects, item: `${baseUrl}/projects` },
    { "@type": "ListItem", position: 3, name: paraCloud.name, item: `${baseUrl}/projects/para-cloud` }
  ]
};
---

<BaseLayout
  title={marketing.site.meta.projects.paraCloud.title}
  description={marketing.site.meta.projects.paraCloud.description}
  canonical={marketing.site.meta.projects.paraCloud.canonical}
  jsonLd={[productJsonLd, breadcrumbJsonLd]}
>
  <ProjectPage project={paraCloud} />
</BaseLayout>
