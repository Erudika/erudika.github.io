---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectPage from "../../components/ProjectPage.astro";
import marketing from "../../data/site-data.json";

const roboTranslator = marketing.site.pages.projectsIndex.items[5];
const baseUrl = marketing.site.organization.url;

const productJsonLd = {
  "@context": "https://schema.org",
  "@type": "Product",
  name: roboTranslator.name,
  description: roboTranslator.tagline,
  brand: {
    "@type": "Organization",
    name: marketing.site.organization.name
  },
  url: "https://erudika.com/projects/robo-translator"
};

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: marketing.site.components.breadcrumbs.home, item: baseUrl },
    { "@type": "ListItem", position: 2, name: marketing.site.components.breadcrumbs.projects, item: `${baseUrl}/projects` },
    { "@type": "ListItem", position: 3, name: roboTranslator.name, item: `${baseUrl}/projects/robo-translator` }
  ]
};
---

<BaseLayout
  title={marketing.site.meta.projects.roboTranslator.title}
  description={marketing.site.meta.projects.roboTranslator.description}
  canonical={marketing.site.meta.projects.roboTranslator.canonical}
  jsonLd={[productJsonLd, breadcrumbJsonLd]}
>
  <ProjectPage project={roboTranslator} />
</BaseLayout>
