---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectDetail from "../../components/ProjectDetail.astro";
import marketing from "../../data/site-data.json";

const { scooldPro } = marketing.site.projects;
const baseUrl = marketing.site.organization.url;

const productJsonLd = {
  "@context": "https://schema.org",
  "@type": "Product",
  name: scooldPro.name,
  description: scooldPro.subtitle,
  brand: {
    "@type": "Organization",
    name: marketing.site.organization.name
  },
  url: "https://erudika.com/projects/scoold-pro"
};

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: marketing.site.components.breadcrumbs.home, item: baseUrl },
    { "@type": "ListItem", position: 2, name: marketing.site.components.breadcrumbs.projects, item: `${baseUrl}/projects` },
    { "@type": "ListItem", position: 3, name: scooldPro.name, item: `${baseUrl}/projects/scoold-pro` }
  ]
};
---

<BaseLayout
  title={marketing.site.meta.projects.scooldPro.title}
  description={marketing.site.meta.projects.scooldPro.description}
  canonical={marketing.site.meta.projects.scooldPro.canonical}
  jsonLd={[productJsonLd, breadcrumbJsonLd]}
>
  <ProjectDetail
    name={scooldPro.name}
    subtitle={scooldPro.subtitle}
    description={scooldPro.description}
    features={scooldPro.features}
    audience={scooldPro.audience}
    docs={scooldPro.docs}
    repo={scooldPro.repo}
    ctaLabel={scooldPro.ctaLabel}
    ctaHref={scooldPro.ctaHref}
    logo={scooldPro.logo}
  />
</BaseLayout>
