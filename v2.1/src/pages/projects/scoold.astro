---
import BaseLayout from "../../layouts/BaseLayout.astro";
import ProjectPage from "../../components/ProjectPage.astro";
import marketing from "../../data/site-data.json";

const scoold = marketing.site.pages.projectsIndex.items[0];
const baseUrl = marketing.site.organization.url;

const productJsonLd = {
  "@context": "https://schema.org",
  "@type": "Product",
  name: scoold.name,
  description: scoold.tagline,
  brand: {
    "@type": "Organization",
    name: marketing.site.organization.name
  },
  url: "https://erudika.com/projects/scoold"
};

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    { "@type": "ListItem", position: 1, name: marketing.site.components.breadcrumbs.home, item: baseUrl },
    { "@type": "ListItem", position: 2, name: marketing.site.components.breadcrumbs.projects, item: `${baseUrl}/projects` },
    { "@type": "ListItem", position: 3, name: scoold.name, item: `${baseUrl}/projects/scoold` }
  ]
};
---

<BaseLayout
  title={marketing.site.meta.projects.scoold.title}
  description={marketing.site.meta.projects.scoold.description}
  canonical={marketing.site.meta.projects.scoold.canonical}
  jsonLd={[productJsonLd, breadcrumbJsonLd]}
>
  <ProjectPage project={scoold} />
</BaseLayout>
