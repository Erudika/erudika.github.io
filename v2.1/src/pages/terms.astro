---
import BaseLayout from "../layouts/BaseLayout.astro";
import marketing from "../data/site-data.json";

const { terms } = marketing.site.pages;
---

<BaseLayout
  title={marketing.site.meta.terms.title}
  description={marketing.site.meta.terms.description}
  canonical={marketing.site.meta.terms.canonical}
>
  <section class="py-16">
    <div class="section-shell">
      <p class="text-xs font-semibold uppercase tracking-[0.3em] text-slate-500">{terms.eyebrow}</p>
      <h1 class="mt-3 text-4xl font-semibold text-base-content">{terms.title}</h1>
      <p class="mt-4 text-base-content/70">{terms.body}</p>
      <div class="mt-6 space-y-4 text-sm text-base-content/70">
        {terms.points.map((point) => (
          <p>{point}</p>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
